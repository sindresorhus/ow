{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"declaration": false,
		"removeComments": false,
		"pretty": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noImplicitAny": false,
		"noImplicitUseStrict": false,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"outDir": "dist"
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
